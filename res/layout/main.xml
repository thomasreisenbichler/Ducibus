<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_horizontal">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2" android:src="@drawable/logotext" android:paddingLeft="20dp"
            android:paddingRight="20dp"/>
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center_vertical">
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center_horizontal">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton3" android:src="@drawable/pointer" android:onClick="onClick"
                    android:background="#4bafafaf" android:layout_margin="3dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton" android:src="@drawable/theatre" android:background="#4bafafaf"
                    android:layout_margin="3dp"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_gravity="center"
                android:gravity="center_horizontal">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton4" android:src="@drawable/book" android:background="#4bafafaf"
                    android:layout_margin="3dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton2" android:src="@drawable/navigation" android:background="#4bafafaf"
                    android:layout_margin="3dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>

